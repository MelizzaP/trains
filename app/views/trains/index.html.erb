<h1>Trains</h1>
<% if @trains.length > 1 %>
<table>
  <tr>
    <th><u>Train Line</u></th>
    <th><u>Route Name</u></th>
    <th><u>Run Number</u></th>
    <th><u>Operator ID</u></th>
  </tr>
  
  <% @trains.each do |t| %>
    <tr>
      <td> <%= t['train_line'] %> </td>
      <td> <%= t['route_name'] %> </td>
      <td> <%= t['run_number'] %> </td>
      <td> <%= t['operator_id'] %> </td>
      <td> <%= link_to 'edit', edit_train_path(t.id) %> </td>
      <td> <%= link_to "delete", t, method: :delete %> </td>
    </tr>
  <% end %>
 </table>
<% else %>
    <h4>There are currently no trains uploaded</h4>
<% end %>

<h3>Add Trains</h3>
<%= link_to 'one train', new_train_path %>

<%= form_tag import_trains_path, multipart: true do %>
  <p><strong>A bunch of trains in csv format</strong></p>
  <%= file_field_tag :file %><br/>
  <%= submit_tag 'Upload csv file' %>
<% end %>
  
